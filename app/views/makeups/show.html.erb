


<!-- form for review -->
 <div class="row">
    <div class="large-12 columns">
      <div class="panel">
        <!-- Users makeup pick -->
        <h2><%= @makeup.brand %>
        <br><%= @makeup.product %>
        <br><%= @makeup.shade %></h2>
       
      </div>
    </div>
  </div>
   
  <div class="row">
    <div class="large-5 columns ">
      <div class="panel">
         <div class="makeupimages">
        <%= image_tag("/assets/makeup/#{@makeup.image}") %>
        </div>
        <h5><a href="#">
          <%= @makeup.brand %>
          <br>
          <%= @makeup.product %></a>
        </h5>
          <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
         </div>
      </div>
    </div>
      
    <div class="large-6 columns">
      <hr/>
      <div class="row">
        <div class="large-12 columns">
          <% @makeup.reviews.each do |review| %>
          Review:  "<%= review.comment %>"<br>
          Rating:   <%= review.rating %><br>
          -- <%= review.user.name %><br>
      <hr/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    
 
     
