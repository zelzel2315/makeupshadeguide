<div id="signinTitle"></div>
  <div class="row">
      <div class="large-6 columns" id="signinform">
        <h1> Sign up </h1> 

        <%= form_for @user do |f| %>  
          <div class="form-group">
            <%= f.text_field :name, placeholder: "name", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.text_field :email, placeholder: "email address", class: 'form-control', type: 'email' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder: "password", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "confirm your password", class: 'form-control' %>
          </div>
            <%= f.fields_for :user_makeups do |m| %>
            <%= m.hidden_field :user_id, :value => @user.id %>
            <div class="form-group">
            <%= m.collection_select :makeup_id, Makeup.all, :id, :makeup_name, placeholder: "What makeup do you use?" %>
            </div>
            <% end %>
          <div class="form-group"> 
            <%= f.submit "Sign up",:class => 'small round secondary button' %>
          </div> 
        <% end %>
      </div>

      <div class="large-6 columns" id="poster1"></div>

  </div>

      
